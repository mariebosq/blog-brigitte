{% extends "AdminBundle:Article:layout.html.twig" %}

{% block body %}
  <ul class="title-article">
      {% for article in listArticles %}
        <li>
            <input type="hidden" name="_method" value="DELETE" />
            <h1>{{ article.getTitle() }}</h1>
            <p><a class="btn btn-primary btn-md" href="{{ path('admin_edit_article', { 'id' : article.id }) }}">Modifier</a>
            <a class="confirmModal btn btn-primary btn-md" href="{{ path('admin_delete_article', { 'id' : article.id }) }}">Supprimer</a>

            {% if article.getPublishedAt() %}
                <a class="btn btn-primary btn-md" href="{{ path('admin_depublish_article', { 'id' : article.id }) }}">Dépublier</a>
            {% else %}
                <a class="confirmModalp btn btn-primary btn-md" href="{{ path('admin_publish_article', { 'id' : article.id }) }}">Publier</a></p>
            {% endif %}

        </li>
      {% endfor %}
  </ul>

  <div id="dialog-confirm" title="Confirmation de la suppression" style="display:none;">
    <p>
      <span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span>
      Etes-vous sûr de vouloir supprimer cet article ?
      </p>
  </div>

  <div id="dialog-confirm-modif" title="Confirmation de la publication" style="display:none;">
    <p>
      <span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span>
      Etes-vous sûr de vouloir publier cet article ?
      </p>
  </div>
{% endblock %}
