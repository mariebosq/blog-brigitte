{% extends "AdminBundle:Article:layout.html.twig" %}

{% block body %}
  {% if listArticles is not empty %}
    <ul class="title-article">
        {% for article in listArticles %}
          <li>
              <input type="hidden" name="_method" value="DELETE" />
              <h1><a href="{{ url('admin_show_article', { 'id' : article.id }) }}">{{ article.getTitle() }}</a></h1>
              <p><a class="btn btn-primary btn-md" href="{{ path('admin_edit_article', { 'id' : article.id }) }}">Modifier</a>
              <a class="confirmModal btn btn-primary btn-md" href="{{ path('admin_delete_article', { 'id' : article.id }) }}">Supprimer</a>

              {% if article.getPublishedAt() %}
                  <a class="btn btn-primary btn-md depublish" href="{{ path('admin_depublish_article', { 'id' : article.id }) }}">DÃ©publier</a>
              {% else %}
                  <a class="confirmModalp btn btn-primary btn-md" href="{{ path('admin_publish_article', { 'id' : article.id }) }}">Publier</a></p>
              {% endif %}

          </li>
        {% endfor %}
    </ul>
    {% else %}
      <p>Il n'y a aucun article pour l'instant.</p>
  {% endif %}

{% endblock %}
