{% extends "admin.html.twig" %}

{% block body %}
    <section id="articlecomment">
        <h1 id="contenttitle">{{ article.getTitle() }}</h1>

        <p>Catégorie : {{ article.getCategory() }}<p>
        <small>Créé le : {{ article.getCreatedAt()|date('d/m/Y') }}</small>

        <p>{{ article.getContent() | raw }}<p>
    </section>
{% endblock %}
