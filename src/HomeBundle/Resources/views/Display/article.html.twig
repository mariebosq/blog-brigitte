{% extends "HomeBundle:Display:layout.html.twig" %}

{% block body %}

  <h1>{{ article.getTitle() }}</h1>
  <p>{{ article.getContent() }}<p>
  <small>Publier le : {{ article.getPublishedAt()|date('Y-m-d') }}</small>


  <p>Commentaires:<p>
  {% for comment in comments %}
    <p class="comment">{{ comment.getName() }}</p>
    <p class="comment">{{ comment.getContent() }}</p>
    <small>Publier le : {{ comment.getPublishedAt()|date('Y-m-d') }}</small>
  {% endfor %}

  {% include "HomeBundle:Display:form.html.twig" %}

{% endblock %}
